[core]
	autocrlf = input
	filemode = true
[credential]
	helper = libsecret
[push]
	default = current
[merge]
	conflictstyle = diff3
	renameLimit = 999999
[user]
	email = sumwale@gmail.com
	name = Sumedh Wale
[status]
	submoduleSummary = true
[diff]
	submodule = log
[fetch]
	recurseSubmodules = on-demand
[pull]
	rebase = false
	ff = only
[alias]
	spull = !git pull && git submodule sync --recursive && git submodule update --init --recursive
	spush = push --recurse-submodules=on-demand
	lrevert = !git reset HEAD -- "$1" && git checkout -- "$1"
	slog = log --graph --decorate --oneline --all
	files = show --pretty=\"\" --name-only
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[includeIf "gitdir:~/product/mariadb/**"]
	path = ~/.gitconfig.mariadb

[includeIf "gitdir:~/product/tibco/**"]
	path = ~/.gitconfig.tibco

[includeIf "gitdir:/shared/sumedh/tibco/**"]
	path = ~/.gitconfig.tibco
