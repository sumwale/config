[core]
	autocrlf = input
	filemode = true
	pager = delta
[credential]
	helper = libsecret
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	line-numbers = true
	#side-by-side = true
[push]
	default = current
[merge]
	conflictstyle = diff3
	renameLimit = 999999
[user]
	email = sumwale@gmail.com
	name = Sumedh Wale
	signingkey = F6F955142B0ED1AC
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[status]
	submoduleSummary = true
[diff]
	submodule = log
	colorMoved = default
[fetch]
	recurseSubmodules = on-demand
[pull]
	rebase = false
	ff = only
[alias]
	spull = !git pull && git submodule sync --recursive && git submodule update --init --recursive
	spush = push --recurse-submodules=on-demand
	lrevert = !git reset HEAD -- "$1" && git checkout -- "$1"
	slog = log --graph --decorate --oneline --all
	files = show --pretty=\"\" --name-only
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[includeIf "gitdir:~/product/mariadb/**"]
	path = ~/.gitconfig.mariadb
